@{
    ViewData["title"] = "Danh sách người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Người dùng</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng người dùng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <a asp-area="Admin" asp-controller="User" asp-action="Create">Thêm người dùng</a>

                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div id="dataTable_filter" class="dataTables_filter">
                                <label>
                                    Search:
                                    <input type="search" class="form-control form-control-sm" placeholder="" aria-controls="dataTable">
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th>Mã người dùng</th>
                                        <th>Email</th>
                                        <th>Tài khoản</th>
                                        <th>Mật khẩu</th>
                                        <th>Số điện thoại</th>
                                        <th>Quyền</th>
                                        <th>Tác vụ </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var userWithRoles in Model)
                                    {
                                        <tr>
                                            <td>@userWithRoles.User.Id</td>
                                            <td>@userWithRoles.User.Email</td>
                                            <td>@userWithRoles.User.UserName</td>
                                            <td>@userWithRoles.User.PasswordHash</td>
                                            <td>@userWithRoles.User.PhoneNumber</td>
                                            <td>@userWithRoles.RoleName</td>
                                            <td>
                                                <a class="btn btn-success mb-1" asp-controller="User" asp-action="Edit" asp-route-id="@userWithRoles.User.Id">Sửa</a>
                                                <a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-Id="@userWithRoles.User.Id">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
