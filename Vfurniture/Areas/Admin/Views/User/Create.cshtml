@model AppNguoiDung

@{
    ViewData["title"] = "Thêm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm người dùng</h2>

<div class="container mt-2">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h1 class="h4 text-primary">Thêm người dùng</h1>
                </div>

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Mã người dùng -->
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" required class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordHash"></label>
                        <input asp-for="PasswordHash" required class="form-control" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <!-- Tên người dùng -->
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" required class="form-control" placeholder="" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" required class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <!-- Trạng thái -->
                    <div class="form-group">
                        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control">
                            <option value="">Chọn quyền</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary btn-block">Thêm người dùng</button>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-secondary btn-block" asp-action="Index">Quay lại</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
