@model Vfurniture.Models.KhuyenMaiModel

@{
    ViewData["Title"] = "Thêm Khuyến Mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Thêm Khuyến Mãi</h1>

    <div class="card shadow">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">Form Thêm Khuyến Mãi</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TenKhuyenMai"></label>
                    <input asp-for="TenKhuyenMai" class="form-control" placeholder="Tên khuyến mãi" />
                    <span asp-validation-for="TenKhuyenMai" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mota"></label>
                    <textarea asp-for="Mota" class="form-control" placeholder="Mô tả"></textarea>
                    <span asp-validation-for="Mota" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhanTramGiam"></label>
                    <input asp-for="PhanTramGiam" type="number" class="form-control" />
                    <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuong"></label>
                    <input asp-for="SoLuong" type="number" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgayBatdau"></label>
                    <input asp-for="NgayBatdau" type="date" class="form-control" />
                    <span asp-validation-for="NgayBatdau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgayKetThuc"></label>
                    <input asp-for="NgayKetThuc" type="date" class="form-control" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Thêm Khuyến Mãi</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
