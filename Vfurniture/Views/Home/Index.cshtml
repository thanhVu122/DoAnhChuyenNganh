@model IEnumerable<Vfurniture.Models.SanPhams>


@{
    ViewData["Title"] = "Home Page";
}

<div class="col-sm-3">
    @Html.Partial("_SidebarPartial")
</div>



<div class="col-sm-9 padding-right">

    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Sản phẩm nổi bật</h2>

        @*     1 san pham *@
        @foreach(var item in Model)
        {
            item.Discount ??= 1;
            int giaValue = item.Gia ?? 1000; 
            int giamoi = (item.Discount.Value * giaValue) / 100;
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                       
                            <div class="productinfo text-center">
                                <a asp-controller="SanPham" asp-action="Deltail" asp-route-id="@item.MaSanPham">
                                    <span class="discount">@item.Discount%</span>
                                    <img src="~/images/sanpham/@item.HinhAnh" alt="" />
                                    <p class="pt-2">@item.TenSanPham</p>
                                </a>

                                <div class="row p">
                                <div class="col-md-6">
                                    <h2  class="giamoi" style="font-size: 20px">
                                        @String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", item.Gia-giamoi)
                                    </h2>
                                </div>
                                <div class="col-md-6">
                                    <h2>
                                        <del>
                                            @String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", item.Gia)
                                        </del>
                                    </h2>
                                </div>
                                </div>

                                <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Mua ngay</a>
                            <a class="btn btn-default add-to-cart" asp-controller="Giohang" asp-action="Them" asp-route-Id="@item.MaSanPham">
                                    <i class="fa fa-shopping-cart"></i>Giỏ hàng
                                </a>
                            </div>
                      
                    </div>

                </div>
            </div>

        }
    </div><!--features_items-->
    <!--/category-tab-->
    
</div>