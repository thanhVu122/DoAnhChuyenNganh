@model Vfurniture.Models.LienHe
@{
    ViewData["Title"] = "Liên Hệ";
}

<div class="container">
    <div class="row mt-4">
        <!-- Left Column: Contact Information -->
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 thanhTrai">
            <div class="box">
                <div class="page_cotact">
                    <h2 class="title-head-contact trai">
                        <span>Địa chỉ liên hệ</span>
                    </h2>
                </div>
                <div class="contact">
                    <div class="body-contact mot">
                        <div class="icon">
                            <i class="fa-solid fa-location-crosshairs"></i>
                        </div>
                        <div class="info">
                            Ấp 2, xã Phước Bình, huyện Long Thành, tỉnh Đồng Nai
                        </div>
                    </div>
                    <div class="body-contact hai">
                        <div class="icon">
                            <i class="fa-solid fa-phone-volume"></i>
                        </div>
                        <div class="info">0763163435</div>
                    </div>
                    <div class="body-contact ba">
                        <div class="icon">
                            <i class="fa-solid fa-paper-plane"></i>
                        </div>
                        <div class="info">thanhvu1462003@gmail.com</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Contact Form -->
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 thanhPhai">
            <div class="page_cotact text-contact">
                <h2 class="title-head-contact phai">
                    <span>Yêu cầu của bạn.</span>
                </h2>
                <div class="input-contact">
                    <form id="contact-form" asp-action="Create" method="post">
                        <div class="row group-contact">
                            <!-- Họ và Tên -->
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-3 form-group">
                                <label asp-for="HoTen" class="form-label"></label>
                                <input asp-for="HoTen" type="text" class="form-control form-control-lg" id="nameInput" placeholder="Nhập họ và tên" required>
                                <span asp-validation-for="HoTen" class="form-message text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-3 form-group">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" id="emailInput" placeholder="Nhập email" required>
                                <span asp-validation-for="Email" class="form-message text-danger"></span>
                            </div>

                            <!-- Số điện thoại -->
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-3 form-group">
                                <label asp-for="SoDienThoai" class="form-label"></label>
                                <input asp-for="SoDienThoai" type="tel" class="form-control form-control-lg" id="sdtInput" placeholder="Nhập số điện thoại" pattern="[0-9]{10}" title="Số điện thoại phải gồm 10 chữ số" required>
                                <span asp-validation-for="SoDienThoai" class="form-message text-danger"></span>
                            </div>

                            <!-- Nội dung -->
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-3 form-group">
                                <label asp-for="NoiDung" class="form-label"></label>
                                <textarea asp-for="NoiDung" class="form-control" id="feedbackInput" rows="3" placeholder="Nhập nội dung phản hồi" required></textarea>
                                <span asp-validation-for="NoiDung" class="form-message text-danger"></span>
                            </div>
                        </div>

                        <!-- Nút Gửi -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" style="width: 200px;">Gửi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
