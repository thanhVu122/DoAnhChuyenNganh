        <div class="col-lg-8 col-md-8 col-sm-12 col-sx-12 thanhPhai">
            <div class="page_cotact text-contact">
                <h2 class="title-head-contact phai">
                    <span>Yêu cầu của bạn.</span>
                </h2>
                <div class="input-contact">
                    <form id="contact-form" asp-action="Create" method="post">
                        <div class="row group-contact">
                            <!-- Họ và Tên -->
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-3 form-group">
                                <label asp-for="HoTen" class="form-label"></label>
                                <input asp-for="HoTen" type="text" class="form-control form-control-lg" id="nameInput" name="FullName" placeholder="Nhập họ và tên" required>
                                <span asp-validation-for="HoTen" class="form-message" id="nameErrorMessage"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-3 form-group">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" id="emailInput" name="Email" placeholder="Nhập email" required>
                                <span asp-validation-for="Email" class="form-message" id="emailErrorMessage"></span>
                            </div>

                            <!-- Số điện thoại -->
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-3 form-group">
                                <label asp-for="SoDienThoai" class="form-label"></label>
                                <input asp-for="SoDienThoai" type="tel" class="form-control form-control-lg" id="sdtInput" name="Phone" placeholder="Nhập số điện thoại" pattern="[0-9]{10}" title="Số điện thoại phải gồm 10 chữ số" required>
                                <span asp-validation-for="SoDienThoai" class="form-message" id="sdtErrorMessage"></span>
                            </div>

                            <!-- Phản hồi -->
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-3 form-group">
                                <label asp-for="NoiDung" class="form-label"></label>
                                <textarea asp-for="NoiDung" class="form-control" id="feedbackInput" name="Feedback" rows="3" placeholder="Nhập nội dung phản hồi" required></textarea>
                                <span asp-validation-for="NoiDung" class="form-message" id="feedbackErrorMessage"></span>
                            </div>
                        </div>

                        <!-- Nút Gửi -->
                        <div class="text-center">
                            <input type="submit" value="Gửi" id="gui" class="btn btn-primary" style="width: 200px;">
                        </div>
                    </form>
                </div>
            </div>
        </div>
