@model Vfurniture.Models.DatHang
@{
    ViewData["title"] = "Chi tiết đơn hàng";

    decimal TongTien = 0;
    decimal TongTienCuaSanPham = 0;

}


<div class="container mt-4">
    <h4>Chi tiết đơn hàng: @Model.MaDatHang</h4>
    <p>Ngày đặt: @Model.NgayTao.ToString("dd/MM/yyyy")</p>
    <p>Trạng thái: <span class="badge @(Model.TrangThai == 1 ? "bg-success" : "bg-warning")">@Model.TrangThai</span></p>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietDonHangs)
            {
                TongTienCuaSanPham = item.SoLuong * item.SanPhams.GiaKhuyenMai;
                TongTien += TongTienCuaSanPham;
                <tr>
                    <td>@item.SanPhams.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td>@item.SanPhams.GiaKhuyenMai.ToString("N0")đ</td>
                    <td>@TongTienCuaSanPham.ToString("N0")đ</td>
                </tr>
            }
        </tbody>
    </table>

    @*   <div class="text-end">
    <h5>Tổng cộng: @Model.TongTien.ToString("N0") đ</h5>
    </div> *@
</div>
