@model AppNguoiDung
@{
    ViewData["Title"] = "Cập nhật thông tin cá nhân";
}
<div class="layout-info-account">
    <div class="title-infor-account text-center mb-4">
        <h1>Tài khoản của bạn</h1>
    </div>
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-xs-12 col-sm-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Tài khoản</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><a href="/account" class="btn btn-link">Thông tin tài khoản</a></li>
                            <li class="mb-2"><a href="/account/addresses" class="btn btn-link">Danh sách địa chỉ</a></li>
                            <li><a href="/account/logout" class="btn btn-link">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Form Update Info -->
            <div class="col-xs-12 col-sm-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Cập nhật thông tin tài khoản</h5>
                        <form asp-action="UpdatInfo" id="update_customer" method="post">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" >
                            </div>

                            <div class="form-group">
                                <label asp-for="TenNguoiDung" class="form-label">Tên người dùng</label>
                                <input asp-for="TenNguoiDung" type="text" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                                <input asp-for="PhoneNumber" type="text" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
                                <input asp-for="NgaySinh" type="date" class="form-control">
                            </div>

                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}

