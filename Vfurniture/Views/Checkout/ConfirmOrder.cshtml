     <div class="row">
         <div class="col-md-6">
             <h4>Thông tin khách hàng</h4>
             <ul>
                 <li><strong>Email:</strong> @ViewBag.OrderItem.TenNguoiDat</li>
                 <li><strong>Địa chỉ:</strong> @ViewBag.OrderItem.DiaChiCuThe</li>
                 <li><strong>Tỉnh:</strong> @ViewBag.OrderItem.Tinh</li>
                 <li><strong>Quận:</strong> @ViewBag.OrderItem.Quan</li>
                 <li><strong>Phường:</strong> @ViewBag.OrderItem.Phuong</li>
                 <li><strong>Giá Vận Chuyển:</strong> @ViewBag.OrderItem.GiaShip.ToString("C")</li>
