                         <th>Giá</th>
                         <th>Số Lượng</th>
                         <th>Tổng</th>
                     </tr>
                 </thead>
                 <tbody>
                     @foreach (var item in ViewBag.OrderDetails)
                     {
                         <tr>
                             <td>@item.MaSanPham</td>
                             <td>@item.Gia.ToString("C")</td>
                             <td>@item.SoLuong</td>
                             <td>@(item.Gia * item.SoLuong).ToString("C")</td>
                         </tr>
                     }
                 </tbody>
             </table>
             <hr />
             <h4>Tổng cộng: @ViewBag.OrderItem.GiaShip.ToString("C")</h4>
         </div>
     </div>

     <div class="text-center">
         <form method="post" action="@Url.Action("Checkout", "Checkout")">
             <input type="hidden" name="tinh" value="@ViewBag.OrderItem.Tinh" />
             <input type="hidden" name="quan" value="@ViewBag.OrderItem.Quan" />
             <input type="hidden" name="phuong" value="@ViewBag.OrderItem.Phuong" />
             <input type="hidden" name="DiaChiCuThe" value="@ViewBag.OrderItem.DiaChiCuThe" />
             <button type="submit" class="btn btn-primary">Xác Nhận Đơn Hàng</button>
         </form>
     </div>
 </div>
